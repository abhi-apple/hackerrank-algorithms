#include <algorithm>
#include <iostream>
#include <vector>
#include <cmath>

using namespace std;
int main(){
    int n;
    int he[10000];
    cin>>n;
    int max;
    cin>>max;
    for(int i=0;i<n;i++){
        cin>>he[i];
    }
    int ma= *max_element(he , he+n);
    if(ma>max){
        cout<<ma-max;
    }else{
        cout<<0;
    }
}
